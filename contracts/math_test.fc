{-
    math_test.fc 

    Tests for math.fc
-}

_ test_math::sqrt() impure inline {
    assert("sqrt #0", math::sqrt(10000) == 100);
    assert("sqrt #1", math::sqrt(1000) == 31);
}

_ test_math::ln() impure inline {
    assert("ln #0", math::ln(10.math::to_dec()) == 2302585092994045683);      
}

_ test_math::log() impure inline {
    assert("log #0", math::log(
            10.math::to_dec(),
            5.math::to_dec()
        ) == 1430676558073393050);      
}

_ test_math::exp() impure inline {
    assert("exp #0", math::exp(10.math::to_dec()) == 22026465794806716516930);      
}

_ test_math::pow() impure inline {
    assert("pow #0", math::pow(
            323.math::to_dec(),
            22.math::to_dec()
        ) == 15938795234306217177076873485360043910303022847486610614966008843041200000);      
}

_ test_math() impure inline {
    test_math::sqrt();
    test_math::ln();
    test_math::log();
    test_math::exp();
    test_math::pow();   
}   