_ assert(slice err, int cond) impure inline_ref {
    if ~ cond {
        var errcode = begin_cell()
            .store_slice(err)
            .store_uint(0, 256)
            .as_slice()
            .preload_uint(256) % 16;
        
        ~dump::string(err);
        
        throw(errcode);
    }
}